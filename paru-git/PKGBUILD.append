depends=(${depends[@]/pacman/})
depends=(${depends[@]/libalpm*/})

pkgver() {
  cd "$_pkgname"
  git describe --long --tags --abbrev=7 --exclude='*[a-zA-Z][a-zA-Z]*' \
    | sed -E 's/^[^0-9]*//;s/([^-]*-g)/r\1/;s/-/./g'
}

eval _orig_"$(declare -f package)"
package() {
  depends+=('libalpm.so')
  _orig_package
}
